{
  "compilerOptions": {
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "module": "CommonJS",
    "baseUrl": "./",
    "typeRoots": [],
    "lib": ["es5", "es2015", "dom", "scripthost"]

  },
  "types": [
    "reflect-metadata"
  ],
  "include": [
    "./**/*.ts", "src/index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}